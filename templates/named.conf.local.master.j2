zone "{{ domain }}" IN {
    type master;
    file "/etc/bind/zones/db.{{ domain }}";
    allow-transfer { {{ groups['ns2'][0] }}; };     # ns2 private IP address - secondary
};

zone "{{ rev_domain }}" IN {
    type master;
    file "/etc/bind/zones/db.{{ rev_domain }}";
    allow-transfer { {{ groups['ns2'][0] }}; };     # ns2 private IP address - secondary
};
